<h1>Request a Loan</h1>

<%= form_with(model: [current_user, @loan], local: true) do |form| %>
  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01 %>
  </div>

  <div>
    <%= form.label :interest_rate %>
    <%= form.number_field :interest_rate, step: 0.01 %>
  </div>

  <div>
    <%= form.submit 'Request Loan' %>
  </div>
<% end %>
