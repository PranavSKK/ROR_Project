<!-- app/views/admin/loans/new.html.erb -->
<h1>New Loan</h1>

<%= form_with model: @loan, url: admin_loans_path, local: true do |form| %>
  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01 %>
  </div>
  
  <div>
    <%= form.label :interest_rate %>
    <%= form.number_field :interest_rate, step: 0.01 %>
  </div>

  <div>
    <%= form.submit 'Create Loan' %>
  </div>
<% end %>
